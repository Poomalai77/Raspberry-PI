PROGRAM :

import RPi.GPIO as GPIO
import time
import pywhatkit

sensor_pin = 17
GPIO.setmode(GPIO.BCM)
GPIO.setup(sensor_pin, GPIO.IN)

while True:
    if GPIO.input(sensor_pin) == 0:  # Flame detected
        print("ðŸ”¥ Flame Detected!")
        pywhatkit.sendwhatmsg_instantly("+91xxxxxxxxxx", "ðŸ”¥ Fire Alert! Flame detected by Raspberry Pi", 10)
        time.sleep(10)
    time.sleep(1)
